                (autoload 'ghc-init "ghc" nil t)
                (add-hook 'haskell-mode-hook 'ghc-init)
                (add-hook 'haskell-mode-hook 'capitalized-words-mode)
                (add-hook 'haskell-mode-hook 'turn-on-haskell-decl-scan)))
